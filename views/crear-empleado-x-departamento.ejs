<%- include('template/cabecera', { tituloWeb: "Nomina - Crear Dpto Empleado" , bgActive1: "" , bgActive2: "" ,
    bgActive3: "active" , bgActive4: "" , bgActive5: "" , bgActive6: "" }); %>

    <div class="container-fluid d-flex flex-column mt-5">
        <h2 class=" text-secondary">Crear Departamento por Empleado</h2>
        <hr>
        <div class="d-flex align-items-center justify-content-end ">
            <button type="submit" class="btn btn-success mt-3 me-lg-3">Guardar Cambios</button>
            <a class="btn btn-danger mt-3 " href="/empleados/informacion-empleado/<%= empleado.idEmpleado %> "><i
                    class="bi bi-person-plus me-lg-3"></i>Cancerlar</a>
        </div>
        <div class="header-container p-2 mb-3 mt-3 h-25 text-light" style="background-color: rgba(172, 172, 172, 0.113); border-radius: 8px;">
            <h5 class="mt-3 font-weight-bold">
                <%= empleado.idEmpleado %>
                    <%= empleado.nombre %>
                        <%= empleado.apellido %>
            </h5>
            <div class="d-lg-flex">
                <h5 class="me-lg-3">
                    <strong class="font-weight-bold">Fecha de nacimiento:</strong>
                    <%= empleado.nacimiento %>
                </h5>
                <h5 class="me-lg-3">
                    <strong id="campoTiempoEmpresa" class="font-weight-bold">Ingreso a la empresa: </strong>
                    <%= empleado.tiempoEmpresa %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold">Cedula:
                    </strong>
                    <%= empleado.cedula %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold">Sexo
                    </strong>
                    <%= empleado.sexo %>
                </h5>
                <h5>
                    <strong class="estatusInfEmp font-weight-bold">Estatus
                    </strong>
                    <%= empleado.estatus %>

                </h5>
            </div>
        </div>

        <div class="container-departamento">

            <form class="" action="" method="POST">
                <div class="form-group">
                    <!-- <label for="exampleInputEmail1">Nombre Departamento</label> -->
                    <input type="text" class="form-control" name="idEmpleado" placeholder="Codigo Empleado">
                    <input type="text" class="form-control" name="idDepartamento" placeholder="Codigo Departamento">
                    <input type="text" class="form-control" name="fechaRegistro" placeholder="Fecha Registro">
                    <input type="text" class="form-control" name="estadoDepartamento" placeholder="Estado Dpto">

                    <small id="emailHelp" class="form-text ">Departamentos creados:</small><br>
                    <small id="emailHelp" class="form-text ">
                        <%= %>
                    </small><br>

                </div>


            </form>

        </div>


    </div>




    <%- include('template/footer'); %>