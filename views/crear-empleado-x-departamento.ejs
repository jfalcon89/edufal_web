<%- include('template/cabecera', { tituloWeb: "Nomina - Crear Dpto Empleado" , bgActive1: "" , bgActive2: "" ,
    bgActive3: "active" , bgActive4: "" , bgActive5: "" , bgActive6: "" }); %>

    <div class="container-fluid d-flex flex-column mt-5">
        <h2 class=" text-secondary">Crear Departamento por Empleado</h2>
        <hr>
        <div class="d-flex align-items-center justify-content-end ">

            <a class="btn btn-warning my-4 " href="/empleados/informacion-empleado/<%= empleado.idEmpleado %> "><i
                    class="bi bi-arrow-left me-lg-3"></i>Volver Atras</a>
        </div>
        <div class="header-container p-2 mb-3 mt-3 h-25 text-light " style="background-color: rgba(172, 172, 172, 0.113); border-radius: 8px;">
            <h5 class="mt-3 font-weight-bold fs-3" style="color: #02aeae;">
                <%= empleado.idEmpleado %>
                    <%= empleado.nombre %>
                        <%= empleado.apellido %>
            </h5>
            <hr>
            <div class="d-lg-flex  ">
                <h5 class="me-lg-3">
                    <strong class="font-weight-bold d-lg-flex">Fecha de nacimiento</strong>
                    <%= empleado.nacimiento %>
                </h5>
                <h5 class="me-lg-3">
                    <strong id="campoTiempoEmpresa" class="font-weight-bold d-lg-flex">Ingreso a la empresa </strong>
                    <%= empleado.tiempoEmpresa %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold d-lg-flex">Cedula
                    </strong>
                    <%= empleado.cedula %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold d-lg-flex">Sexo
                    </strong>
                    <%= empleado.sexo %>
                </h5>
                <h5>
                    <strong class="estatusInfEmp font-weight-bold d-lg-flex">Estatus
                    </strong>
                    <%= empleado.estatus %>

                </h5>
            </div>
        </div>

        <form class="" action="" method="POST">
            <div class="container-departamento">
                <% if (empleado_x_departamento) { %>
                    <h5 class="bg-danger d-flex justify-content-center text-light">Empleado ya tiene un departamento asignado
                    </h5>
                    <% }else { %>

                        <div class="form-group">
                            <!-- <label for="exampleInputEmail1">Nombre Departamento</label> -->
                            <input type="text" class="form-control visually-hidden" name="idEmpleado" placeholder="Codigo Empleado" value="<%= empleado.idEmpleado %> " required>
                            <!-- <label for="departamento" class=" p-2">Departamento</label> -->
                            <select name="idDepartamento" class="form-control mt-2 text-secondary" style="background-color: rgba(255, 0, 0, 0); border: none;" required>
                                <option class="text-dark" value="Seleccionar Departamento" selected>Seleccionar
                                    Departamento
                                </option>

                                <% if (arrayDepartamentos.length> 0) { %>
                                    <% arrayDepartamentos.forEach(departamento=> { %>
                                        <option class="text-dark" value="<%= departamento.idDepartamento %>">
                                            <%= departamento.nombre_dpto %>
                                        </option>
                                        <% }) %>
                                            <% } %>
                            </select>
                            <!-- <input type="text" class="form-control" name="idDepartamento" placeholder="Codigo Departamento"> -->
                            <input type="date" class="form-control text-secondary" name="fechaRegistroB" placeholder="Fecha Registro" required>
                            <!-- <input type="text" class="form-control" name="estadoDepartamento" placeholder="Estado Dpto" required> -->
                            <select name="estadoDepartamentoB" class="form-control text-secondary" required>
                                <option class="text-dark" value="Seleccionar" selected>Seleccionar</option>
                                <option class="text-dark" value="Activo">Activo</option>
                                <option class="text-dark" value="Inactivo">Inactivo</option>
                            </select>
                            <button type="submit" class="btn  my-4 me-lg-3" style="background-color: #02aeae;">Guardar
                                Cambios</button>
                            <small id="emailHelp" class="form-text ">Departamentos creados:</small><br>
                            <small id="emailHelp" class="form-text ">
                                <%= %>
                            </small><br>

                        </div>
                        <% } %>


        </form>

        </div>


    </div>




    <%- include('template/footer'); %>