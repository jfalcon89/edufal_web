<%- include('template/cabecera', { tituloWeb: "Nomina - Editar Departamento" , bgActive1: "" , bgActive2: "active" ,
    bgActive3: "" , bgActive4: "" , bgActive5: "" , bgActive6: "" }); %>

    <div class="container-fluid mt-5">
        <h2 class=" text-secondary">Editar Departamento</h2>
        <hr>

        <div class="d-flex align-items-center justify-content-end ">

            <a class="btn btn-danger my-4 " href="/departamentos"><i class="bi bi-person-plus me-lg-3"></i>Cancerlar</a>
        </div>

        <div class="container-departamento">
            <form class="" action="" method="POST">

                <div>
                    <label for="exampleInputEmail1">Nombre Departamento</label>
                    <input type="text" class="form-control text-secondary " name="nombre_dpto" aria-describedby="emailHelp" placeholder="" value="<%= departamento.nombre_dpto %>" required>
                </div>
                <div class="mt-3">
                    <label for="">Fecha Modificacion</label>
                    <input type="date" class="form-control text-secondary" name="fechaRegistro" value="<%= departamento.fechaRegistro %>" required>
                </div>
                <div class="mt-3">
                    <label for="exampleInputEmail1">Estado Departamento</label>
                    <select name="estadoDepartamento" class="form-control text-secondary" required>
                        <option class="text-dark" value="<%= departamento.estadoDepartamento %>" selected>
                            <%= departamento.estadoDepartamento %>
                        </option>
                        <option class="text-dark" value="Activo">Activo</option>
                        <option class="text-dark" value="Inactivo">Inactivo</option>
                    </select>
                </div>

                <button type="submit" class="btn  my-4 me-lg-3" style="background-color: #02aeae;">Guardar
                    Cambios</button>
            </form>

        </div>


    </div>




    <%- include('template/footer'); %>