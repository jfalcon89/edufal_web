                        class="form-control p-2 text-success font-weight-bold text-center mt-2" id="sueldoNeto">
                </div>
            </div> -->


        </form>


    </div>
    <%- include('template/modalReporteNomina'); %>
        <%- include('template/modalParametrosNomina'); %>


            <script src="/js/nomina.js"></script>
            <%- include('template/footer'); %>

                <!-- Modal Eliminar -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">Eliminar Estudiante
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <%= estudiante.nombre %>
                                    <%= estudiante.apellido %>
                            </div>
                            <div>
                                <span class="d-flex justify-content-center bg-secondary text-light m-4">Al eliminar este
                                    estudiante se
                                    perderan todos los registros de pagos, descuentos, cursos asignado, etc. SEGURO QUE
                                    LO QUIERE ELIMINAR ?</span>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <a type="submit" href="/admin/estudiantes-adm/eliminar-estudiante-adm/<%= estudiante.id_estudiante %>" class="btn text-light bg-danger " title="Eliminar Empleado">Eliminar Estudiante</a>
                            </div>
                        </div>
                    </div>
                </div>