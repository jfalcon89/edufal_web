<%- include('template/cabecera', { tituloWeb: "Nomina - Edit Empleado Departamento" , bgActive1: "" , bgActive2: "" ,
    bgActive3: "active" , bgActive4: "" , bgActive5: "" , bgActive6: "" }); %>

    <div class="container-fluid d-flex flex-column mt-2">
        <h2 class=" text-secondary">Editar Departamento por Empleado</h2>
        <hr>
        <!-- <div class="navbar-departamentos d-flex justify-content-end bg-light">
            <h5>agregar dpto</h5>
        </div> -->

        <div class="d-flex align-items-center justify-content-end ">

            <a class="btn btn-warning my-4 " href="/empleados/informacion-empleado/ver-empleado-x-departamento/<%= empleado.idEmpleado %> "><i
                    class="bi bi-arrow-left me-lg-3"></i>Volver Atras</a>
        </div>

        <div class="header-container p-2 mb-3 mt-3 h-25 text-light " style="background-color: #acacac5c; border-radius: 8px;">
            <h5 class="mt-3 font-weight-bold fs-3" style="color: #02aeae;">
                <%= empleado.idEmpleado %>
                    <%= empleado.nombre %>
                        <%= empleado.apellido %>
            </h5>
            <hr>
            <div class="d-lg-flex  text-secondary">
                <h5 class="me-lg-3">
                    <strong class="font-weight-bold d-lg-flex">Fecha de nacimiento</strong>
                    <%= empleado.nacimiento %>
                </h5>
                <h5 class="me-lg-3">
                    <strong id="campoTiempoEmpresa" class="font-weight-bold d-lg-flex">Fecha Contratacion </strong>
                    <%= empleado.tiempoEmpresa.toLocaleString('es-US', { timeZone: "America/Santo_Domingo" }) %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold d-lg-flex">Cedula
                    </strong>
                    <%= empleado.cedula %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold d-lg-flex">Sexo
                    </strong>
                    <%= empleado.sexo %>
                </h5>
                <h5>
                    <strong class="estatusInfEmp font-weight-bold d-lg-flex">Estatus
                    </strong>
                    <%= empleado.estatus %>

                </h5>
            </div>
        </div>



        <div class="container-departamento">

            <form class="" action="" method="POST">


                <!-- <label for="exampleInputEmail1">Nombre Departamento</label> -->
                <input type="text" class="form-control visually-hidden" name="idEmpleado" placeholder="Codigo Empleado" value="<%= empleado_x_departamento.idEmpleado %> ">
                <!-- <input type="text" class="form-control" name="idDepartamento" placeholder="Codigo Departamento" value="<%= empleado_x_departamento.idDepartamento %> "> -->
                <select name="idDepartamento" class="form-control mt-2 text-secondary" style="background-color: rgba(255, 0, 0, 0); border: none;" required>
                    <option class="text-dark" value="<%= empleado_x_departamento.idDepartamento %> " selected>
                        <%= empleado_x_departamento.nombre_dpto %>
                    </option>

                    <% if (arrayDepartamentos.length> 0) { %>
                        <% arrayDepartamentos.forEach(departamento=> { %>
                            <option class="text-dark" value="<%= departamento.idDepartamento %>">
                                <%= departamento.nombre_dpto %>
                            </option>
                            <% }) %>
                                <% } %>
                </select>
                <input type="date" class="form-control text-secondary" name="fechaRegistroB" required>
                <select name="estadoDepartamentoB" class="form-control text-secondary" required>
                    <option class="text-dark" value="<%= empleado_x_departamento.estadoDepartamentoB %>" selected>
                        <%= empleado_x_departamento.estadoDepartamentoB %>
                    </option>
                    <option class="text-dark" value="Activo">Activo</option>
                    <option class="text-dark" value="Inactivo">Inactivo</option>
                </select>

                <button type="submit" class="btn my-4 me-lg-3" style="background-color: #02aeae;">Guardar
                    Cambios</button>

                <small id="emailHelp" class="form-text ">Departamento Actual: <%= empleado_x_departamento.nombre_dpto %>
                </small><br>







            </form>

        </div>


    </div>




    <%- include('template/footer'); %>