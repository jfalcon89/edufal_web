<%- include('template/cabecera', { tituloWeb: "Nomina - Crear Descuento por Empleado" , bgActive1: "" , bgActive2: "" ,
    bgActive3: "active" , bgActive4: "" , bgActive5: "" , bgActive6: "" }); %>

    <div class="container-fluid d-flex flex-column mt-2">
        <h2 class=" text-secondary">Crear Descuento por Empleado</h2>
        <hr>
        <div class="d-flex align-items-center justify-content-end ">

            <a class="btn btn-warning my-4 " href="/empleados/informacion-empleado/<%= empleado.idEmpleado %> "><i
                    class="bi bi-arrow-left me-lg-3"></i>Volver Atras</a>
        </div>
        <div class="header-container p-2 mb-3 mt-3 h-25 text-light " style="background-color: #acacac5c; border-radius: 8px;">
            <h5 class="mt-3 font-weight-bold fs-3" style="color: #02aeae;">
                <%= empleado.idEmpleado %>
                    <%= empleado.nombre %>
                        <%= empleado.apellido %>
            </h5>
            <hr>
            <div class="d-lg-flex text-secondary ">
                <h5 class="me-lg-3">
                    <strong class="font-weight-bold d-lg-flex">Fecha de nacimiento</strong>
                    <%= empleado.nacimiento %>
                </h5>
                <h5 class="me-lg-3">
                    <strong id="campoTiempoEmpresa" class="font-weight-bold d-lg-flex">Fecha Contratacion </strong>
                    <%= empleado.tiempoEmpresa.toLocaleString('es-US', { timeZone: "America/Santo_Domingo" }) %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold d-lg-flex">Cedula
                    </strong>
                    <%= empleado.cedula %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold d-lg-flex">Sexo
                    </strong>
                    <%= empleado.sexo %>
                </h5>
                <h5>
                    <strong class="estatusInfEmp font-weight-bold d-lg-flex">Estatus
                    </strong>
                    <%= empleado.estatus %>

                </h5>
            </div>
        </div>

        <form class="" action="" method="POST">
            <div class="container-departamento">


                <div class="form-group">
                    <input type="text" class="form-control visually-hidden" name="idEmpleado" placeholder="Codigo Empleado" value="<%= empleado.idEmpleado %> " required>
                    <select name="tipoDescuento" class="form-control mt-2 text-secondary" style="background-color: rgba(255, 0, 0, 0); border: none;" required>
                        <option class="text-dark" value="Seleccionar Tipo Descuento" selected>Seleccionar Tipo Descuento
                        </option>
                        <option class="text-dark" value="Recurrente">Recurrente</option>
                        <option class="text-dark" value="Fijo">Fijo</option>
                        <option class="text-dark" value="Provisional">Provisional</option>
                        <option class="text-dark" value="Otros">Otros</option>
                    </select>
                    <select name="nombreDescuento" class="form-control mt-2 text-secondary" style="background-color: rgba(255, 0, 0, 0); border: none;" required>
                        <option class="text-dark" value="Seleccionar Descuento" selected>Seleccionar Descuento
                        </option>
                        <option class="text-dark" value="Ars">Ars</option>
                        <option class="text-dark" value="Afp">Afp</option>
                        <option class="text-dark" value="Cooperativa">Cooperativa</option>
                        <option class="text-dark" value="Otros">Otros</option>
                        <option class="text-dark" value="Prestamo">Prestamo</option>
                    </select>
                    <input type="number" class="form-control text-secondary" name="montoDescuento" placeholder="Monto Descuento" required>
                    <select name="estadoDescuento" class="form-control text-secondary" required>
                        <option class="text-dark" value="Selected" selected>Seleccionar Estado</option>
                        <option class="text-dark" value="Activo">Activo</option>
                        <option class="text-dark" value="Inactivo">Inactivo</option>
                    </select>
                    <textarea maxlength="250" type="text" name="observacionDescuento" class="form-control" placeholder="Observacion" required></textarea>
                    <button type="submit" class="btn  my-4 me-lg-3" style="background-color: #02aeae;">Guardar
                        Cambios</button>
                    <small id="emailHelp" class="form-text ">Descuentos creados:</small><br>
                    <small id="emailHelp" class="form-text ">
                        <%= %>
                    </small><br>

                </div>



        </form>

        </div>


    </div>




    <%- include('template/footer'); %>