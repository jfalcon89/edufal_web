<%- include('template/cabecera', { tituloWeb: "Nomina - Informacion Empleado" , bgActive1: "" , bgActive2: "" ,
    bgActive3: "active" , bgActive4: "" , bgActive5: "" , bgActive6: "" }); %>

    <div class="container-fluid d-flex flex-column mt-5">
        <h2 class="text-secondary">Informacion Empleado</h2>
        <hr>
        <div class=" mb-2 d-flex justify-content-end">
            <a href="/empleados" class="btn btn-warning mt-3 "><i class="bi bi-arrow-left me-lg-3"></i>Volver
                a
                atras</a>
        </div>

        <div class="header-container mb-3 mt-3 h-25 text-light" style="background-color: rgba(172, 172, 172, 0.113); border-radius: 8px;">
            <h5 class="mt-3">
                <%= empleado.idEmpleado %>
                    <%= empleado.nombre %>
                        <%= empleado.apellido %>
            </h5>
            <p>
                <span><b>Fecha de nacimiento: </b>
                    <%= empleado.nacimiento %>
                </span>
                <span id="campoTiempoEmpresa"><b>Ingreso a la empresa: </b>
                    <%= empleado.tiempoEmpresa %>
                </span>
                <span><b>Cedula: </b>
                    <%= empleado.cedula %>
                </span>
                <span><b>Sexo </b>
                    <%= empleado.sexo %>
                </span>
                <span class="estatusInfEmp  "><b>Estatus </b>
                    <%= empleado.estatus %>
                </span>

            </p>
        </div>

        <div class="body-container d-flex flex-column mb-5 text-light" style="background-color: rgba(172, 172, 172, 0.113); border-radius: 15px;">
            <div class="d-lg-flex ">

                <div class="card_documento " style="width: 25%;">
                    <div class="card-body d-flex justify-content-center flex-column ">
                        <h5 class="d-flex justify-content-center ">Documentos</h5>
                        <p class="card-text d-flex justify-content-center ">Tiene 2 documento</p>
                        <div class="d-flex justify-content-center ">
                            <div class="d-flex flex-nowrap ">
                                <a href="#" class="btn btn-primary d-flex me-lg-2" style="background-color: rgba(0, 128, 128, 0.371);"><i
                                        class="bi bi-files me-lg-2"></i>Ver</a>
                                <a href="#" class="btn btn-secondary d-flex me-lg-2"><i
                                        class="bi bi-file-earmark-plus me-lg-2"></i>Agregar</a>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card_poncheEntra" style="width: 25%;">
                    <div class="card-body d-flex justify-content-center flex-column ">
                        <h5 class=" d-flex justify-content-center ">Descuentos</h5>
                        <p class="card-text d-flex justify-content-center ">Tiene 2 Descuentos</p>
                        <div class="d-flex justify-content-center">
                            <div class="d-flex flex-nowrap ">
                                <a href="#" class="btn btn-primary d-flex me-lg-2" style="background-color: rgba(0, 128, 128, 0.371);"><i
                                        class="bi bi-files me-lg-2"></i>Ver</a>
                                <a href="#" class="btn btn-secondary d-flex me-lg-2"><i
                                        class="bi bi-file-earmark-plus me-lg-2"></i>Agregar</a>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card_pago" style="width: 25%;">
                    <div class="card-body d-flex justify-content-center flex-column ">
                        <h5 class=" d-flex justify-content-center ">Pagos</h5>
                        <p class="card-text d-flex justify-content-center ">Tiene 2 Pagos</p>
                        <div class="d-flex justify-content-center">
                            <div class="d-flex flex-nowrap ">
                                <a href="#" class="btn btn-primary d-flex me-lg-2" style="background-color: rgba(0, 128, 128, 0.371);"><i
                                        class="bi bi-files me-lg-2"></i>Ver</a>
                                <a href="#" class="btn btn-secondary d-flex me-lg-2"><i
                                        class="bi bi-file-earmark-plus me-lg-2"></i>Agregar</a>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="card_coperativa" style="width: 25%;">
                    <div class="card-body d-flex justify-content-center flex-column ">
                        <h5 class=" d-flex justify-content-center ">Departamento</h5>
                        <p class="card-text d-flex justify-content-center ">Tiene 2 </p>
                        <div class="d-flex justify-content-center">
                            <div class="d-flex flex-nowrap ">
                                <a href="/empleados/informacion-empleado/ver-empleado-x-departamento/<%= empleado.idEmpleado %> " class="btn btn-primary d-flex me-lg-2" style="background-color: rgba(0, 128, 128, 0.371);"><i
                                        class="bi bi-files me-lg-2"></i>Ver</a>
                                <a href="/empleados/informacion-empleado/crear-empleado-x-departamento/<%= empleado.idEmpleado %> " class="btn btn-secondary d-flex me-lg-2"><i
                                        class="bi bi-file-earmark-plus me-lg-2"></i>Agregar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <h3 class="mb-5">Detalle Informacion</h3>

        <table class="table table-sm table-hover mb-5">
            <thead class="thead-ligth">
                <tr>
                    <!-- <th scope="col">Id</th> -->
                    <th scope="col">Codigo</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">apellido</th>
                    <th scope="col">Cedula</th>
                    <th scope="col">Estatus</th>
                    <th scope="col">Sueldo</th>
                    <th scope="col">T. desc</th>
                    <th scope="col">Sueldo Neto</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        <%= empleado.idEmpleado %>
                    </td>
                    <td>
                        <%= empleado.nombre %>
                    </td>
                    <td>
                        <%= empleado.apellido %>
                    </td>
                    <td>
                        <%= empleado.cedula %>
                    </td>
                    <td>
                        <%= empleado.estatus %>
                    </td>
                    <td>
                        <%= empleado.sueldoBruto %>
                    </td>
                    <td>
                        <%= empleado.totalDescuentos %>
                    </td>
                    <td>
                        <%= empleado.sueldoNeto %>
                    </td>
                    <td class="w-0 "><a href="/empleados/detalle-empleado/<%= empleado.idEmpleado %>" class="btn " title="Editar"><i class="bi bi-pencil-square "></i></a>
                        <a href="/empleados/informacion-empleado/<%= empleado.idEmpleado %>" class="btn " title="Ver informacion empleado"><i class="bi bi-folder2-open "></i></a>
                    </td>
                </tr>

            </tbody>
        </table>



    </div>




    <%- include('template/footer'); %>