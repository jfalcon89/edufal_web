<%- include('template/cabecera', { tituloWeb: "Nomina - Informacion Empleado" , bgActive1: "" , bgActive2: "" ,
    bgActive3: "active" , bgActive4: "" , bgActive5: "" , bgActive6: "" }); %>

    <div class="container-fluid d-flex flex-column mt-2">
        <h2 class="text-secondary">Informacion Empleado</h2>
        <hr>
        <div class=" mb-2 d-flex justify-content-end">
            <a href="/empleados" class="btn btn-warning mt-3 "><i class="bi bi-arrow-left me-lg-3"></i>Volver
                a
                atras</a>
        </div>

        <div class="header-container p-2 mb-3 mt-3 h-25 text-light " style="background-color: #acacac5c; border-radius: 8px;">
            <h5 class="mt-3 font-weight-bold fs-3" style="color: #02aeae;">
                <%= empleado.idEmpleado %>
                    <%= empleado.nombre %>
                        <%= empleado.apellido %>
            </h5>
            <hr>
            <div class="d-lg-flex text-secondary ">
                <h5 class="me-lg-3">
                    <strong class="font-weight-bold d-lg-flex">Fecha de nacimiento</strong>
                    <%= empleado.nacimiento %>
                </h5>
                <h5 class="me-lg-3">
                    <strong id="campoTiempoEmpresa" class="font-weight-bold d-lg-flex">Fecha Contratacion </strong>
                    <%= empleado.tiempoEmpresa.toLocaleString('es-US', { timeZone: "America/Santo_Domingo" }) %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold d-lg-flex">Cedula
                    </strong>
                    <%= empleado.cedula %>
                </h5>
                <h5 class="me-lg-3">

                    <strong class="font-weight-bold d-lg-flex">Sexo
                    </strong>
                    <%= empleado.sexo %>
                </h5>
                <h5>
                    <strong class="estatusInfEmp font-weight-bold d-lg-flex">Estatus
                    </strong>
                    <%= empleado.estatus %>

                </h5>
            </div>
        </div>



        <div class="text-light mb-5" style="background-color: #acacac5c; border-radius: 15px;">
            <div class="d-sm-flex justify-content-around ">
                <div class="d-xl-flex ">

                    <div class="card_coperativa">
                        <div class="card-body d-flex justify-content-center flex-column ">
                            <h5 class=" d-flex justify-content-center text-secondary ">Departamento</h5>
                            <p class="card-text d-flex justify-content-center text-secondary">Tiene 2 </p>
                            <div class="d-flex justify-content-center">
                                <div class="d-flex flex-nowrap ">
                                    <a href="/empleados/informacion-empleado/ver-empleado-x-departamento/<%= empleado.idEmpleado %> " class="btn btn-secondary d-flex me-lg-2"><i
                                            class="bi bi-files me-lg-2"></i>Ver</a>
                                    <a href="/empleados/informacion-empleado/crear-empleado-x-departamento/<%= empleado.idEmpleado %> " class="btn  d-flex me-lg-2" style="background-color: #02aeae;"><i
                                            class="bi bi-file-earmark-plus me-lg-2"></i>Agregar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card_poncheEntra">
                        <div class="card-body d-flex justify-content-center flex-column ">
                            <h5 class=" d-flex justify-content-center text-secondary ">Documentos</h5>
                            <p class="card-text d-flex justify-content-center text-secondary ">Tiene 2 Documentos</p>
                            <div class="d-flex justify-content-center">
                                <div class="d-flex flex-nowrap ">
                                    <a href="#" class="btn btn-secondary d-flex me-lg-2"><i
                                            class="bi bi-files me-lg-2"></i>Ver</a>
                                    <a href="#" class="btn  d-flex me-lg-2" style="background-color: #02aeae;"><i
                                            class="bi bi-file-earmark-plus me-lg-2"></i>Agregar</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-xl-flex">
                    <div class="card_pago">
                        <div class="card-body d-flex justify-content-center flex-column ">
                            <h5 class=" d-flex justify-content-center text-secondary ">Pagos</h5>
                            <p class="card-text d-flex justify-content-center text-secondary ">Tiene 2 Pagos</p>
                            <div class="d-flex justify-content-center">
                                <div class="d-flex flex-nowrap ">
                                    <a href="#" class="btn btn-secondary d-flex me-lg-2"><i
                                            class="bi bi-files me-lg-2"></i>Ver</a>
                                    <a href="#" class="btn  d-flex me-lg-2" style="background-color: #02aeae;"><i
                                            class="bi bi-file-earmark-plus me-lg-2"></i>Agregar</a>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card_documento ">
                        <div class="card-body d-flex justify-content-center flex-column ">
                            <h5 class="d-flex justify-content-center text-secondary ">Descuentos</h5>
                            <p class="card-text d-flex justify-content-center text-secondary ">Tiene 2 Descuentos</p>
                            <div class="d-flex justify-content-center ">
                                <div class="d-flex flex-nowrap ">
                                    <a href="#" class="btn btn-secondary d-flex me-lg-2"><i
                                            class="bi bi-files me-lg-2"></i>Ver</a>
                                    <a href="#" class="btn  d-flex me-lg-2" style="background-color: #02aeae;"><i
                                            class="bi bi-file-earmark-plus me-lg-2"></i>Agregar</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h3 class="mb-3">Detalle Informacion</h3>

        <table class="table table-sm table-hover mb-5">
            <thead class="thead-ligth">
                <tr>
                    <!-- <th scope="col">Id</th> -->
                    <th scope="col">Codigo</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">apellido</th>
                    <th scope="col">Cedula</th>
                    <th scope="col">Estatus</th>
                    <th scope="col">Departamento</th>
                    <th scope="col">Sueldo</th>
                    <th scope="col">T. desc</th>
                    <th scope="col">Sueldo Neto</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        <%= empleado.idEmpleado %>
                    </td>
                    <td>
                        <%= empleado.nombre %>
                    </td>
                    <td>
                        <%= empleado.apellido %>
                    </td>
                    <td>
                        <%= empleado.cedula %>
                    </td>
                    <td>
                        <%= empleado.estatus %>
                    </td>
                    <td>
                        <% if (empleado_x_departamento) { %>
                            <%= empleado_x_departamento.nombre_dpto %>
                                <% }else { %>
                                    <p>No Asignado</p>
                                    <% } %>
                    </td>
                    <td>
                        <%= empleado.sueldoBruto %>
                    </td>
                    <td>
                        <%= empleado.totalDescuentos %>
                    </td>
                    <td>
                        <%= empleado.sueldoNeto %>
                    </td>
                    <td class="w-0 "><a href="/empleados/detalle-empleado/<%= empleado.idEmpleado %>" class="btn " title="Editar"><i class="bi bi-pencil-square "></i></a>
                        <a href="/empleados/informacion-empleado/<%= empleado.idEmpleado %>" class="btn " title="Ver informacion empleado"><i class="bi bi-folder2-open "></i></a>
                    </td>
                </tr>

            </tbody>
        </table>



    </div>




    <%- include('template/footer'); %>