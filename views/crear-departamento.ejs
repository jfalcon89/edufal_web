<%- include('template/cabecera', { tituloWeb: "Nomina - Crear Departamento" , bgActive1: "" , bgActive2: "active" ,
    bgActive3: "" , bgActive4: "" , bgActive5: "" , bgActive6: "" , bgActive7: "" }); %>

    <div class="container-fluid mt-2">
        <h2 class=" text-secondary">Crear Departamento - Puesto</h2>
        <hr>
        <div class="d-flex align-items-center justify-content-end my-4">

            <a href="/departamentos" class="btn btn-warning  "><i class="bi bi-arrow-left me-lg-3"></i>Volver a
                atras</a>
        </div>

        <div class="container-departamento">

            <form class="" action="" method="POST">

                <div>
                    <label for="nombre_dpto">Nombre Puesto</label>
                    <input type="text" class="form-control " name="nombre_dpto" id="nombre_dpto"
                        aria-describedby="emailHelp" placeholder="Descripcion" required>
                </div>

                <div class="mt-3">
                    <label for="exampleInputEmail1">Estado Puesto</label>
                    <select name="estadoDepartamento" class="form-control text-secondary" required>
                        <option class="text-dark" value="" selected>Seleccionar</option>
                        <option class="text-dark" value="Activo">Activo</option>
                        <option class="text-dark" value="Inactivo">Inactivo</option>
                    </select>
                </div>
                <button type="submit" class="btn  my-4 me-lg-3" style="background-color: #02aeae;">Guardar
                    Puesto</button>
                <small id="emailHelp" class="form-text mt-5">Puestos creados:</small>

                <% if (arrayDepartamentos.length> 0) { %>
                    <% arrayDepartamentos.forEach(departamento=> { %>

                        <small id="emailHelp" class="form-text text-muted mt-0">
                            <%= departamento.nombre_dpto %>
                        </small>

                        <% }) %>
                            <% } %>



            </form>

        </div>


    </div>




    <%- include('template/footer'); %>