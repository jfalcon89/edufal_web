<%- include('template/cabecera', { tituloWeb: "Nomina - Asignamientos Departamentos" , bgActive1: "" ,
    bgActive2: "active" , bgActive3: "" , bgActive4: "" , bgActive5: "" , bgActive6: "" }); %>


    <!-- content inicio -->


    <div class="container-fluid mt-2">
        <h2 class=" text-secondary">Asignamientos Puestos Empleados</h2>
        <hr>
        <!-- <div class="navbar-departamentos d-flex justify-content-end bg-light">
                                    <h5>agregar dpto</h5>
                                </div> -->

        <div class="d-lg-flex align-items-center justify-content-end my-4">
            <a class="btn  me-lg-3" style="background-color: #02aeae;" href="/crear-departamento"><i
                    class="bi bi-person-plus me-lg-3"></i>Agregar
                Puesto</a>
            <a href="/departamentos" class="btn btn-warning "><i class="bi bi-arrow-left me-lg-3"></i>Volver
                a
                atras</a>
        </div>

        <div class="container-departamento">

            <table id="datatable" class="display responsive nowrap" style="width:100%">
                <thead class="thead-ligth">
                    <tr>
                        <!-- <th scope="col">Id</th> -->
                        <th scope="col">ID Empleado</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Cedula</th>
                        <th scope="col">Sexo</th>
                        <th scope="col">Estado Asignacion</th>
                        <th scope="col">Puesto</th>
                        <th scope="col">Constrato</th>
                        <th scope="col">Pago</th>
                        <th scope="col">Comision</th>
                        <th scope="col">Sueldo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (empleado_x_departamento.length> 0) { %>
                        <% empleado_x_departamento.forEach(departamentoEmpleado=> { %>

                            <tr>
                                <td>
                                    <%= departamentoEmpleado.idEmpleado %>
                                </td>
                                <td>
                                    <%= departamentoEmpleado.nombre %>
                                </td>
                                <td>
                                    <%= departamentoEmpleado.apellido %>
                                </td>
                                <td>
                                    <%= departamentoEmpleado.cedula %>
                                </td>
                                <td>
                                    <%= departamentoEmpleado.sexo %>
                                </td>
                                <td>
                                    <% if (departamentoEmpleado.estadoDepartamentoB=="Inactivo" ) { %>
                                        <p class="bg-danger text-light">
                                            <%= departamentoEmpleado.estadoDepartamentoB %>
                                        </p>
                                        <% }else { %>
                                            <%= departamentoEmpleado.estadoDepartamentoB %>
                                                <% } %>
                                </td>
                                <td>
                                    <%= departamentoEmpleado.nombre_dpto %>
                                </td>
                                <td>
                                    <%= departamentoEmpleado.condicionContrato %>
                                </td>
                                <td>
                                    <%= departamentoEmpleado.formaPago %>
                                </td>
                                <td>
                                    <%= departamentoEmpleado.comision %>
                                </td>
                                <td>
                                    <%= departamentoEmpleado.sueldoBruto %>
                                </td>

                                <td class="w-0">
                                    <a href="/empleados/detalle-empleado/<%= departamentoEmpleado.idEmpleado %>" class="btn" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                    <a id="eventoAct-Inact" href="/empleados/informacion-empleado/<%= departamentoEmpleado.idEmpleado %>" class="btn" title="Ver informacion empleado"><i
                                            class="bi bi-folder2-open"></i></a>


                                </td>
                            </tr>

                            <% }) %>
                                <% } %>
                </tbody>
            </table>
        </div>
    </div>



    <!-- content fin -->
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable({
                order: [
                    [0, 'desc']
                ],


                language: {
                    "decimal": "",
                    "emptyTable": "No hay informaci√≥n",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });

        });
    </script>


    <%- include('template/footer'); %>